<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: black;">
    <!-- Màn hình hiển thị -->
    <top>
        <Label fx:id="display" text="0"
               style="-fx-text-fill: white; -fx-font-size: 48; -fx-alignment: center-right;"
               BorderPane.alignment="CENTER" maxWidth="Infinity" padding="20"/>
    </top>

    <!-- Các nút bấm -->
    <center>
        <GridPane hgap="10" vgap="10" padding="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
            </rowConstraints>

            <!-- Hàng 0 -->
            <Button text="C" styleClass="gray-btn" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="+/-" styleClass="gray-btn" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="%" styleClass="gray-btn" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button text="÷" styleClass="orange-btn" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <!-- Hàng 1 -->
            <Button text="7" styleClass="dark-btn" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="8" styleClass="dark-btn" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="9" styleClass="dark-btn" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button text="×" styleClass="orange-btn" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <!-- Hàng 2 -->
            <Button text="4" styleClass="dark-btn" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="5" styleClass="dark-btn" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Button text="6" styleClass="dark-btn" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <Button text="−" styleClass="orange-btn" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

            <!-- Hàng 3 -->
            <Button text="1" styleClass="dark-btn" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Button text="2" styleClass="dark-btn" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Button text="3" styleClass="dark-btn" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <Button text="+" styleClass="orange-btn" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

            <!-- Hàng 4 -->
            <Button text="0" styleClass="dark-btn" maxWidth="Infinity"
                    GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            <Button text="." styleClass="dark-btn" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
            <Button text="=" styleClass="orange-btn" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
        </GridPane>
    </center>
</BorderPane>
